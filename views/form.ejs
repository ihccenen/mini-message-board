<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="wrapper grid">
      <form class="form flex" method="POST" actions="/new">
        <label class="flex" for="messageUser">
          Username*:
          <input type="text" name="messageUser" id="messageUser" required />
        </label>

        <label class="flex" for="messageText">
          Message*:
          <textarea name="messageText" id="messageText" required></textarea>
        </label>

        <button class="submit-message-btn" type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
